cabal-version:       2.4
name:                clash-ila
synopsis:            clash-ila
description:         The Clash integrated logic analyzer
version:             0.1
License:             MIT
license-file:        LICENSE
author:              QBayLogic B.V.
maintainer:          devops@qbaylogic.com
Copyright:           Copyright Â© 2024 QBayLogic B.V.
Category:            Hardware

common common-options
  default-extensions:
    DataKinds
    DefaultSignatures
    DeriveAnyClass
    DerivingStrategies
    LambdaCase
    NoStarIsType
    TypeFamilies
    UnicodeSyntax
    ViewPatterns
    TemplateHaskell
    QuasiQuotes
    NoImplicitPrelude
  ghc-options:
    -Wall -Wcompat
    -fplugin GHC.TypeLits.Extra.Solver
    -fplugin GHC.TypeLits.Normalise
    -fplugin GHC.TypeLits.KnownNat.Solver
    -fconstraint-solver-iterations=8
    -fexpose-all-unfoldings
    -fno-worker-wrapper
    -fno-unbox-small-strict-fields
    -fno-unbox-strict-fields
  default-language: GHC2021
  build-depends:
    base,
    hedgehog,
    split,
    template-haskell,
    aeson,
    hashable,
    clash-cores,
    clash-lib,
    clash-prelude,
    clash-prelude-hedgehog,
    clash-protocols,
    clash-protocols-base,
    string-interpolate,
    prettyprinter,
    utf8-string,
    mtl,
    lens,
    pretty-show,
    constraints,
    ghc-typelits-natnormalise,
    ghc-typelits-extra,
    ghc-typelits-knownnat

executable clash
  main-is: clash/Main.hs
  build-depends:
    base,
    clash-ghc,
    clash-ila,
    examples

library
  import: common-options
  hs-source-dirs: src
  exposed-modules:
    Clash.Ila
    Clash.Ila.Configurator
  other-modules:
    Clash.Ila.Internal.Communication
    Clash.Ila.Internal.RingBuffer

test-suite unittests
  import: common-options
  type: exitcode-stdio-1.0
  hs-source-dirs:
    tests
    src
  main-is: Tests.hs
  build-depends:
    clash-ila
  other-modules:
    Tests.RingBuffer
    Tests.Communication
    Clash.Ila.Internal.Communication
    Clash.Ila.Internal.RingBuffer

library examples
  import: common-options
  hs-source-dirs:
    examples
  build-depends:
    clash-ila
  exposed-modules:
    ClashIlaDemo
    Domain
